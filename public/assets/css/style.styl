  nav
    top: 20px;
    width 418px;
    ul
      transform: skew(-22.5deg);
      padding-left: 20px;
      padding-right: 30px;
      margin-left: 15px;
      margin-right: -15px;
      li
        a
          transform: skew(22.5deg);

@media (min-width: 960px)
  #jumbotron
    background-position-x: 80%;
    .actions
      margin-left: 0;
      left: 13%;


