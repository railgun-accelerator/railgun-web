.actions
  position absolute
  opacity: 1;
  top 0
  transition: all .4s ease-in-out

.actions.ng-enter-active,.actions.ng-leave
  opacity: 1;
  top 0
.actions.ng-leave-active,.actions.ng-enter
  opacity: 0;
.actions.ng-leave-active
  top 100px
.actions.ng-enter
  top -100px
body.sign_in, body.sign_up
  .actions.ng-leave-active
    top -100px
  .actions.ng-enter
    top 100px