nav
  transition: all ease-in .5s;
  position absolute
  overflow: hidden;
  z-index: 1;
  top: 0;
  right: 0;
  width: 100%;
  ul
    transition-property: all;
    transition-duration: 300ms;
    transition-timing-function: ease-in-out;
    background: #3e00a4;

    li
      &, &:hover
        transition-property: background-color
        transition-duration: 300ms;
        transition-timing-function: ease-in-out;
        a
          transition-property: color
          transition-duration: 300ms;
          transition-timing-function: ease-in-out;
      a
        text-align: center;
        color: white;
        text-decoration: none;
        display: block;

        padding: 20px 30px;
        border: 0;
        font-weight bold

      &:hover
        background-color: #fdd000
        a
          color: black



header
  background -webkit-linear-gradient(90deg, #5c00ff, #410cc7)
  position relative
  color white
  a
    color white
    text-decoration none
.welcome header
    min-height: 500px;
.my header
    min-height: 200px;


footer
  font-size 12px
  line-height 20px
  background #c0b5d3
  padding 20px 30px
  color #3c324d
  p
    margin 0
    a
      color #2c184f
      text-decoration none
      border-bottom 1px dashed #20113c
#body
  background-color #fafafa
//index
#jumbotron
  position absolute
  background url("../images/title.png") no-repeat;
  background-size auto 380px
  background-position: 960px bottom;
  transition: background-position-x ease-in .5s;
  width: 100%;
  height: 500px;

  //index.index
  .actions
    transition-property: all;
    transition-duration: 300ms;
    transition-timing-function: ease-in-out;
    position absolute
    width 300px
    margin-left: -150px;
    left: 50%;

  #intro
    padding-top 170px
    text-align center
    h1
      font-size: 40px;
      line-height: 60px;
      font-weight: bold;
    .subtitle
      font-size: 15px;
      line-height: 40px;
      font-weight bold
    #sign_buttons
      display: inline-block;
      margin: 15px auto;
      border: 1px white solid;
      border-radius: 3px;
      font-size: 12px;
      font-weight bold
    a
      width: 98px;
      padding: 12px;
      display: inline-block;
      &:hover
        color: #4e06e1;
        background: white;
        transition: all ease-in 0.3s;
    a
      text-decoration: none;
      border: none;
  //index.sign_in
  .sign-form
    position absolute
    padding 140px 35px 0 35px
    width 300px
    font-size: 13px;

    h2
      font-size: 25px;
      line-height: 3em;
      text-align: center;
    .form-control
      background: transparent;
      border: white 1px solid;
      border-radius: 3px;
      color: white;
      transition: all 0.2s ease-in;
      outline: none;
    button.form-control, a.form-control
        text-decoration none
        margin: 0 3px;
        padding: 0 4px;
        line-height 23px
        display inline-block
        &:hover
          background: white;
          color: #5105e9;
          transition: all 0.2s ease-out;
    .form-control[type=text], .form-control[type=password], .form-control[type=email]
      width: 218px;
      padding: 8px;
      margin: 5px 0;
      &::-webkit-input-placeholder {
        color: white;
        opacity: 0.8;
        transition: all 0.2s ease-in;
      }
      &::-moz-placeholder {
        color: white;
        opacity: 0.8;
        transition: all 0.2s ease-in;
      }
      &:-moz-placeholder {
        color: white;
        opacity: 0.8;
        transition: all 0.2s ease-in;
      }
      &:-ms-input-placeholder {
        color: white;
        opacity: 0.8;
        transition: all 0.2s ease-in;
      }
      &:focus {
        background: white;
        color: #5105e9;
        transition: all 0.2s ease-out;
        &::-webkit-input-placeholder {
          color: #5105e9;
          opacity: 1;
        }
        &::-moz-placeholder {
          color: #5105e9;
          opacity: 1;
        }
        &:-moz-placeholder {
          color: #5105e9;
          opacity: 1;
        }
        &:-ms-input-placeholder {
          color: #5105e9;
          opacity: 1;
        }
      }
    input[type=checkbox].form-control
      vertical-align inherit
      margin-right: 5px;
    .sign-buttons
      float:right
  #sign-up
    padding-top 100px
    #tos-link
      text-decoration: none;
      border-bottom: 1px white dashed;
      margin-bottom 4px
    .sign-buttons
      margin-top: 10px;

